<p id="notice"><%= notice %></p>

<h1>Listing Movements </h1>
<h2><%= link_to 'New Movement', new_movement_path %></h2>

<table id="MovementList">
  <thead>
    <tr>
      <th>Class</th>
      <th>Date</th>
      <th>Description</th>
      <th>Amount</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @movements.each do |movement| %>
      <tr>
        <td><%= movement.mov_class %></td>
        <td><%= movement.date %></td>
        <td><%= movement.description %></td>
        <td align="right"><%= number_with_precision(movement.amount, presicion: 2, delimiter: ",") %></td>
        <td><%= link_to 'Show', movement %></td>
        <td><%= link_to 'Edit', edit_movement_path(movement) %></td>
        <td><%= link_to 'Destroy', movement, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
	<div>
		<% b=Budget.new%>
		<% b.calculate_budget(@movements) %>
		<span>Total Balance: </span>
		<%= number_to_currency(b.total_balance, unit:"CRC ") %>
	</div>
  </tbody>
</table>

<br>

<%= link_to 'New Movement', new_movement_path %>
